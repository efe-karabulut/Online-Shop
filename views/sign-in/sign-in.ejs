<%- include("../includes/head.ejs") %>
<link rel="stylesheet" href="/css/login.css">
</head>

<body>
    <%- include("../includes/nav.ejs") %>
    <% if (errorMessage) { %>
        <div class="flash-message-container">
            <span class="error-message"><%= errorMessage %></span>
        </div>
    <% } %>
    <% if (successMessage) { %>
        <div class="flash-message-container">
            <span class="success-message"><%= successMessage %></span>
        </div>
    <% } %>
    <main class="main-container">
        <form class="login-form" action="/sign-in" method="POST" >
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="user-email">User Email:</label>
                <input class="<%= validationError.path === 'signInEmail' ? 'invalid' : '' %>" id="user-email" type="email" name="signInEmail" value="<%= oldLoginEmail %>">
            </div>

            <div class="form-control">
                <label for="user-password">User Password:</label>
                <input class="user-password" type="password" name="signInPassword" id="user-password">
            </div>
            
            <button class="btn" type="submit">Sign in</button>
            <a class="forgot-password" href="/forgot-password">Forgot your password?</a>
        </form>
    </main>
</body>

</html>