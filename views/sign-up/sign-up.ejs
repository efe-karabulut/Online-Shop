<%- include("../includes/head.ejs") %>
<link rel="stylesheet" href="/css/login.css">
</head>

<body>
    <%- include("../includes/nav.ejs") %>
    <main class="main-container">
        <form class="login-form" action="/sign-up" method="POST" novalidate>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <% if (errorMessage) { %>
                <span class="error-message check"><%= errorMessage %></span>
            <% } %>
            <div class="form-control">
                <label for="user-email">Name :</label>
                <input class="<%= validationErr.find(e => e.path === 'signUpName') ? 'invalid' : '' %>" id="user-name" type="text" name="signUpName" value="<%= oldInput.oldName %>">
            </div>

            <div class="form-control">
                <label for="user-email">Email :</label>
                <input class="<%= validationErr.find(e => e.path === 'signUpEmail') ? 'invalid' : '' %>" id="user-email" type="email" name="signUpEmail" value="<%= oldInput.oldEmail %>">
            </div>

            <div class="form-control">
                <label for="user-password">Password :</label>
                <input class="<%= validationErr.find(e => e.path === 'signUpPassword') ? 'invalid' : '' %>" type="password" name="signUpPassword" id="user-password">
            </div>
            <div class="form-control">
                <label for="user-password">Confrim Password :</label>
                <input class="<%= validationErr.find(e => e.path === 'signUpPasswordConfrim') ? 'invalid' : '' %>" type="password" name="signUpPasswordConfrim" id="user-password">
            </div>

            <button class="btn" type="submit">Sign up</button>
        </form>
    </main>
</body>

</html>